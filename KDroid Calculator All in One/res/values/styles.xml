<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="MemoryButton">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>F
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/memory_buttons_background</item>
    </style>

    <style name="FunctionButton">
        <item name="android:textStyle">bold</item>                
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/function_buttons_background</item>
    </style>
    
    <style name="NumberButton">
        <item name="android:textStyle">bold</item>                
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">25sp</item>
        <item name="android:height">50dp</item>        
        <item name="android:background">@drawable/number_buttons_background</item>
    </style>
    
    <style name="ClearButton">
        <item name="android:textStyle">bold</item>                
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">20sp</item>
        <item name="android:height">50dp</item>        
        <item name="android:background">@drawable/clear_buttons_background</item>
    </style>
    
     <style name="ShiftButton">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>F
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/shift_buttons_background</item>
    </style>

</resources>